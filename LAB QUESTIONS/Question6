#include <iostream>
#include <fstream>
#include <string>
#include <algorithm>
using namespace std;
int countvowels(coust string data){
    int vowelcount = 0;
    for (char c : data) {
        if (tolower(c)=='a' || tolower(c) == 'i' || tolower(c) == 'u'){
            vowelcount++;
        }
    }
    return vowelcount;
}
int countwords (const string data){
    int wordcount = 1;
    for(char c : data){
        if (c == ''){
            wordcount++;
        }
    }
    return wordcount;

}
string reversestatement(string data){
    reverse(data.begin(), data.end());
    return data;
}
string capitalsecondLetter(string data)
int i;
for (i=0; i<data.length(); i++){
    if (i==0 && data[i] i='')
    data[i+2]= touper(data[i+2]);
    data[i]= tolower (data[i]);
    return0;
}
